{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Content-Security-Policy header setting'|trans }}{% endblock %}
{% block h1 %}{{ 'Content-Security-Policy header setting'|trans }}{% endblock %}

{% block main_content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="wrap-divider">
        <div class="in-message in-message--warning">
            {{ 'It is highly recommended to test this setting on devel or CI server before it is applied in production!'|trans }}
        </div>
        {{ form_row(form.cspHeader, { label: 'Content-Security-Policy header'|trans }) }}
    </div>

    {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
        {% block fixed_bar_content %}
            {{ form_row(form.save) }}
        {% endblock %}
    {% endembed %}
    {{ form_end(form) }}
{% endblock %}
