{% extends '@!ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Sklad'|trans }}{% endblock %}
{% block h1 %}{{ 'Sklad'|trans }}{% endblock %}

{% block main_content %}

    {% if stock is defined %}
        <div class="wrap-bar__buttons">
            <a href="{{ protectedUrl('admin_stock_setdefault', { id: stock.id }) }}" class="btn btn--light wrap-bar__btn">
                {{ 'Set as default'|trans }}
            </a>
        </div>
    {% endif %}

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                <a href="{{ url('admin_stock_list') }}" class="btn-link-style">{{ 'Zpět na přehled'|trans }}</a>
                {{ form_save(stock|default(null), form) }}
            {% endblock %}
        {% endembed %}
    {{ form_end(form) }}
{% endblock %}
