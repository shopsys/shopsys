{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Sale category settings'|trans }}{% endblock %}
{% block h1 %}{{ 'Sale category settings'|trans }}{% endblock %}

{% block main_content %}

    {{ form_start(form) }}

        {{ form_errors(form) }}
        <div class="wrap-divider">
            {{ form_row(form.category, { label: 'Category'|trans }) }}
        </div>
        {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                {{ form_widget(form.save, { label: 'Save changes'|trans }) }}
            {% endblock %}
        {% endembed %}

    {{ form_end(form) }}
{% endblock %}
