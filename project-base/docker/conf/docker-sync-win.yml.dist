version: '2'
syncs:
    shopsys-framework-sync:
        sync_userid: 1000
        sync_host_port: 10872
        sync_strategy: 'unison'
        src: './'
        sync_excludes: [
            '.git',
            '.idea',
            '.docker-sync',
            '.DS_Store',
            'docker',
            'node_modules',
            'var/cache',
            'var/elasticsearch-data',
            'var/postgres-data',
            'web',
            'vendor'
        ]
        host_disk_mount_mode: 'delegated'

    shopsys-framework-web-sync:
        sync_userid: 1000
        sync_strategy: 'unison'
        src: './web'
        host_disk_mount_mode: 'cached'

    shopsys-framework-vendor-sync:
        sync_userid: 1000
        sync_strategy: 'unison'
        src: './vendor'
        host_disk_mount_mode: 'cached'
