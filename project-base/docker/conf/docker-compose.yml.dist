version: "3.4"

x-variables:
    common_build_args: &common_build_args
        www_data_uid: 1000
        www_data_gid: 1000

services:
    postgres:
        image: postgres:12.1-alpine
        container_name: shopsys-framework-postgres
        volumes:
            - postgres-data:/var/lib/postgresql/data
            - ./app/docker/postgres/postgres.conf:/var/lib/postgresql/data/postgresql.conf
        environment:
            - PGDATA=/var/lib/postgresql/data/pgdata
            - POSTGRES_USER=root
            - POSTGRES_PASSWORD=root
            - POSTGRES_DB=shopsys
        command:
            - postgres
            - -c
            - config_file=/var/lib/postgresql/data/postgresql.conf

    webserver:
        image: nginx:1.13-alpine
        container_name: shopsys-framework-webserver
        depends_on:
            - php-fpm
            - storefront
        volumes:
            - ./app/:/var/www/html
            - ./docker/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
        ports:
            - "8000:8080"

    storefront:
        restart: always
        build:
            context: ./storefront
            dockerfile: ./docker/dev.Dockerfile
            target: development
        container_name: shopsys-framework-storefront
        command: # Optional
            - dev # change to `- build` if you want to test application build
        volumes:
            - ./storefront:/home/node/app
        ports:
            - "3000:3000"

    cypress:
        build:
            context: ./storefront
            dockerfile: ./cypress/docker/Dockerfile
        container_name: shopsys-framework-cypress
        volumes:
            - ./storefront:/app
        profiles:
            - storefront-acceptance-tests

    php-fpm:
        build:
            context: ./app
            dockerfile: docker/php-fpm/Dockerfile
            target: development
            args:
                <<: *common_build_args
        container_name: shopsys-framework-php-fpm
        volumes:
            - ./app/:/var/www/html
        ports:
            - "35729:35729"

    redis:
        image: redis:7.0-alpine
        container_name: shopsys-framework-redis

    redis-commander:
        container_name: shopsys-framework-redis-commander
        image: ghcr.io/joeferner/redis-commander:latest
        restart: always
        environment:
            - REDIS_HOST=redis
        ports:
            - "1600:8081"

    selenium-server:
        image: selenium/standalone-chrome:3.11
        container_name: shopsys-framework-acceptance-tests
        ports:
            - "4400:4444"
        environment:
            - HUB_PORT_4444_TCP_ADDR=hub
            - HUB_PORT_4444_TCP_PORT=4444

    adminer:
        image: adminer:4.7.6
        container_name: shopsys-framework-adminer
        ports:
            - "1100:8080"

    smtp-server:
        image: namshi/smtp:latest
        container_name: shopsys-framework-smtp-server

    elasticsearch:
        build:
            context: ./app/
            dockerfile: docker/elasticsearch/Dockerfile
        container_name: shopsys-framework-elasticsearch
        ulimits:
            nofile:
                soft: 65536
                hard: 65536
        ports:
            - "9200:9200"
        volumes:
            - elasticsearch-data:/usr/share/elasticsearch/data
        environment:
            - discovery.type=single-node

    kibana:
        image: docker.elastic.co/kibana/kibana-oss:7.6.0
        container_name: shopsys-framework-kibana
        depends_on:
            - elasticsearch
        ports:
            - "5601:5601"

volumes:
    elasticsearch-data:
        driver: local
    postgres-data:
        driver: local
