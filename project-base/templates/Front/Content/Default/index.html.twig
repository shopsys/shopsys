{% extends 'Front/Layout/layoutWithPanel.html.twig' %}
{% import 'Front/Content/Product/productListMacro.html.twig' as productList %}

{% block breadcrumb %}
{% endblock %}

{% block meta_description %}
    {{- metaDescription -}}
{% endblock %}

{% block title %}
    {{- title -}}
{% endblock %}

{% block logo %}
    <h1 class="logo">
        <img src="{{ asset('assets/frontend/images/logo.svg') }}" alt="{{ 'Online shop'|trans }}">
    </h1>
{% endblock %}

{% block main_content %}

    {% if sliderItems is not empty %}
        <div class="web__line">
            <div class="web__container">
                <div class="box-slider">
                    <div id="js-slider-homepage" class="box-slider__in">
                        {% for item in sliderItems %}
                            <div class="box-slider__item">
                                <a href="{{ item.link }}">{{ image(item, { lazy: false }) }}</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {{ render(controller('App\\Controller\\Front\\CategoryController:topAction')) }}

    {% if topProducts is not empty %}
        <div class="web__line">
            <div class="web__container">
                <div id="top-products">
                    <h2>{{ 'Special offers'|trans }}</h2>
                    {{ productList.list(topProducts, null, 'h3') }}
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
