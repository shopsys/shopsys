{% extends '@ShopsysShop/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'GDPR settings'|trans }}{% endblock %}
{% block h1 %}{{ 'GDPR settings'|trans }}{% endblock %}

{% block main_content %}

    {{ render(controller('ShopsysShopBundle:Admin/Domain:domainTabs')) }}
    <div class="form-group margin-bottom-20">
        <h2 class="form-group__title">
            {{ 'Link to the GDPR'|trans }}
        </h2>
        <div class="form-line">
            <div class="form-line__line">
                <div class="form-line__label">
                    {{ getDomainName(domain) }}
                    {% if isMultidomain() %}
                        {{ domainIcon(domain) }}
                    {% endif %}
                </div>
                <div class="form-line__item form-line__item--text">
                    <a href="{{ findUrlByDomainId('front_gdpr', {}, domain) }}" target="_blank">
                        {{ findUrlByDomainId('front_gdpr', {}, domain) }}
                    </a>
                </div>
            </div>
        </div>
    </div>
<div class="form-group">
    <div class="form-group__title">
        {{ 'Gdpr'|trans }}
    </div>
    {{  form_start(form) }}
    {{ form_widget(form.content) }}
           {% embed '@ShopsysShop/Admin/Inline/FixedBar/fixedBar.html.twig' %}
               {% block fixed_bar_content %}
                   {{ form_widget(form.save, { label: 'Save changes'|trans }) }}
               {% endblock %}
           {% endembed %}
    {{ form_end(form) }}
</div>

{% endblock %}