{% extends '@ShopsysFramework/Admin/Content/Payment/detail.html.twig' %}

{% block title %}- {{ 'New Payment'|trans }}{% endblock %}
{% block h1 %}{{ 'New Payment'|trans }}{% endblock %}
{% block payment_base_prices %}
    <div id="transport_prices">
        <table class="table">
            <thead>
                <tr>
                    <th>{{ inputPriceLabel() }}</th>
                </tr>
            </thead>
            <tbody>
                {% for currencyId, currency in currencies %}
                    <tr>
                        <td>
                            {{ form_row(
                                form.pricesByCurrencyId[currencyId], {
                                    label: 'Base price in %currencyCode%'|trans({'%currencyCode%': currency.code}),
                                    symbolAfterInput: currencySymbolByCurrencyId(currencyId)
                                }
                            ) }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}