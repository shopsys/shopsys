{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Operator information'|trans }}{% endblock %}
{% block h1 %}{{ 'Operator information'|trans }}{% endblock %}

{% block main_content %}

    {{ render(controller('ShopsysFrameworkBundle:Admin/Domain:domainTabs')) }}

    {{ form_start(form) }}
        <div class="form-group">
            <div class="form-group__title">
                {{ 'Published data'|trans }}
            </div>
            {{ form_row(form.phoneNumber, { label: 'Telephone number'|trans }) }}
            {{ form_row(form.email, { label: 'E-mail'|trans }) }}
            {{ form_row(form.phoneHours, { label: 'Phone availability'|trans }) }}
        </div>

        {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                {{ form_widget(form.save, { label: 'Save changes'|trans}) }}
            {% endblock %}
        {% endembed %}

    {{ form_end(form) }}

{% endblock %}