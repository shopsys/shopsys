{% macro list(product, classAddition) %}

    {% if product.flags %}
        <div class="in-flag dont-print {{ classAddition }}">
            {% for productFlag in product.flags %}
                <span class="in-flag__item" style="background-color: {{ productFlag.rgbColor }};">
                    {{ productFlag.name }}
                </span>
            {% endfor %}
        </div>
    {% endif %}

{% endmacro %}
