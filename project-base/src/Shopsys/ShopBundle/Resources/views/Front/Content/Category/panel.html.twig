{% if categories|length > 0 %}
    <ul class="js-category-list list-menu {% if isFirstLevel %}list-menu--root{% endif %}" {% if isFirstLevel %}id="js-categories"{% endif %}>
        {% for category in categories %}
            {% set isCurrentCategory = (currentCategory is not null and currentCategory == category) %}
            <li class="list-menu__item js-category-item">
                <a href="{{ url('front_product_list', { id: category.id }) }}" class="list-menu__item__link list-menu__item__link--level-{{ category.level }} {% if isCurrentCategory %}current{% endif %}">
                    {{ category.name }}
                    {% if category.hasChildren %}
                        <i class="list-menu__item__control svg svg-arrow js-category-collapse-control {% if category in openCategories %}open{% endif %}" data-url="{{ url('front_category_branch', { parentCategoryId: category.id }) }}"></i>
                    {% endif %}
                </a>
                {% if category in openCategories %}
                    {% set categories = category.children %}
                    {% set isFirstLevel = false %}

                    {% include _self %}
                {% else %}
                    <div class="display-none js-category-list-placeholder"></div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}
