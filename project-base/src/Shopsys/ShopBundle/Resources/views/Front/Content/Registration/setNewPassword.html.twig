{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ 'Set new password'|trans }}
{% endblock %}

{% block breadcrumb %}
{% endblock %}

{% block main_content %}
<div class="web__line">
    <div class="web__container">

    <h1>{{ 'Set new password'|trans }}</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}

        {{ form_row(form.newPassword.first, { label: 'Password'|trans }) }}
        {{ form_row(form.newPassword.second, { label: 'Password again'|trans }) }}

        {{ form_widget(form.submit, { label: 'Set new password'|trans }) }}

    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
