{% for order in orders %}
    <div class="box-order-detail">
        <div class="wrap-box">
            <h2 class="wrap-box__title">{{ 'Order Nr.'|trans }} {{ order.number }}</h2>
            <div class="wrap-box__in">
                <table class="table-params">
                    <tr>
                        <th>{{ 'First name'|trans }}:</th>
                        <td>{{ order.firstName }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Last name'|trans }}:</th>
                        <td>{{ order.lastName }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Telephone'|trans }}:</th>
                        <td>{{ order.telephone }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'E-mail'|trans }}:</th>
                        <td>{{ order.email }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Street'|trans }}:</th>
                        <td>{{ order.street }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'City'|trans }}:</th>
                        <td>{{ order.city }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Postcode'|trans }}:</th>
                        <td>{{ order.postcode }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'Country'|trans }}:</th>
                        <td>{{ order.country.name }}</td>
                    </tr>
                        <tr>
                            <th> {{ 'Billing adress'|trans }}</th>
                            <td>
                                    {{ order.street }},
                                    {{ order.city }},
                                    {{ order.postcode }},
                                    {{ order.country.name }}
                            </td>
                        </tr>
                        {% if order.deliveryAddressSameAsBillingAddress == false %}
                            <tr>
                                <th>{{ 'Delivery adress'|trans }}</th>
                                <td>
                                        {{ order.deliveryFirstName }} ,
                                        {{ order.deliveryLastName }} ,
                                        {{ order.deliveryTelephone }} ,
                                        {{ order.deliveryCompanyName }} ,
                                        {{ order.deliveryStreet }},
                                        {{ order.deliveryCity }},
                                        {{ order.deliveryPostcode }},
                                        {{ order.deliveryCountry.name }}
                                </td>
                            </tr>
                        {% if order.companyName %}
                            <th>{{ 'Company'|trans }} </th>
                            <td>
                                {{ order.companyName }},
                                {{ order.companyNumber }}
                                {{ order.companyTaxNumber }}
                            </td>
                            {% endif %}
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
{% endfor %}