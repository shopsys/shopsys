{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block meta_robots -%}
    <meta name="robots" content="noindex, follow">
{% endblock %}

{% block title %}
    {{ 'Forgotten password'|trans }}
{% endblock %}

{% block main_content %}
    <h1>{{ 'Forgotten password'|trans }}</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}

        {{ form_row(form.email, { label: 'Email'|trans }) }}

        {{ form_widget(form.submit, { label: 'Reset password'|trans }) }}

    {{ form_end(form) }}

{% endblock %}