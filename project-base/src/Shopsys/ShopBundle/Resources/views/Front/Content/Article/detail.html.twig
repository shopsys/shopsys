{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block title %}
    {{- article.seoTitle|default(article.name) -}}
{% endblock %}

{% block meta_description %}
    {{- article.seoMetaDescription|default(getSeoMetaDescription()) -}}
{% endblock %}

{% block main_content %}
    <div class="web__line">
        <div class="web__container">
            <h1>
                {% if article.seoH1 is not null %}
                    {{ article.seoH1 }}
                {% else %}
                    {{ article.name }}
                {% endif %}
            </h1>

            <p>{{ article.createdAt|formatDate }}</p>

            <div class="in-user-text">
                {{ article.text|raw }}
            </div>
        </div>
    </div>
{% endblock %}
