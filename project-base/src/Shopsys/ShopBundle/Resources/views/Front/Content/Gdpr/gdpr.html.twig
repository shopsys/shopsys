{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block title %}
    {{ 'GDPR'|trans }}
{% endblock %}

{% block meta_description %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    <div class="in-user-text">
        <h1>{{ 'GDPR'|trans }}</h1>
        {{ gdprContent|raw }}
        <div class="padding-20">
            {% set url = url('front_gdpr_list') %}
            {{ form_start(form, { action: url, method: 'POST'  }) }}
            {{ form_row(form.email) }}
            {{ form_row(form.send) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}