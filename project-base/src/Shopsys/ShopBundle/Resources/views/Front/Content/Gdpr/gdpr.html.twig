{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block title %}
    {{ 'GDPR'|trans }}
{% endblock %}

{% block meta_description %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    <div class="in-user-text">
        <h1>{{ 'GDPR'|trans }}</h1>

        {{ gdprSiteContent|raw }}

        <div class="padding-20">
            {{ form_start(form, { action: url('front_gdpr'), method: 'POST' }) }}
                {{ form_row(form.email) }}
                {{ form_row(form.send) }}
            {{ form_end(form) }}
            {{ form_errors(form, { errors_attr: { class : 'in-message--alert' } }) }}
        </div>
    </div>

    {% if user is defined %}
        {{ include('@ShopsysShop/Front/Content/Gdpr/detail.html.twig') }}
    {% endif %}

{% endblock %}