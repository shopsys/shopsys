{
    "name": "shopsys-storefront",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "analyze": "ANALYZE=true next build",
        "build": "next build",
        "check": "concurrently \"pnpm run typecheck\" \"pnpm run lint\"",
        "check--fix": "concurrently \"pnpm run typecheck\" \"pnpm run lint--fix\"",
        "dev": "next dev",
        "format": "prettier --config ./prettier.config.js --write '**/*.{js,ts,tsx,json}'",
        "format-check": "prettier --config ./prettier.config.js --check '**/*.{js,ts,tsx,json}'",
        "gql": "pnpm run gql:docs && pnpm run gql:codegen && node schema-compress.js",
        "gql:codegen": "graphql-code-generator --config codegen-config.ts",
        "gql:docs": "graphql-markdown schema.graphql > graphql/docs/schema.md",
        "lint": "pnpm run format-check && eslint '**/*.{js,ts,tsx,json}'",
        "lint--fix": "pnpm run format && eslint '**/*.{js,ts,tsx,json}' --fix",
        "start": "next start",
        "translate": "i18next --config config/i18next-parser.config.js",
        "typecheck": "tsc --pretty --noEmit --project tsconfig.json",
        "test": "vitest",
        "test--update": "vitest -u",
        "test--no-watch": "vitest run"
    },
    "dependencies": {
        "@floating-ui/react": "~0.26.9",
        "@hookform/resolvers": "~2.6.1",
        "@next/bundle-analyzer": "~14.2.8",
        "@sentry/nextjs": "~7.99.0",
        "@urql/devtools": "~2.0.3",
        "@urql/exchange-auth": "~2.1.6",
        "@urql/exchange-graphcache": "~6.4.1",
        "cookies-next": "~4.1.1",
        "crypto-js": "~4.2.0",
        "dayjs": "~1.11.10",
        "framer-motion": "^11.1.9",
        "google-map-react": "^2.2.1",
        "graphql": "~16.8.1",
        "graphql-tag": "~2.12.6",
        "isomorphic-dompurify": "^2.15.0",
        "js-base64": "~3.7.6",
        "jwt-decode": "~4.0.0",
        "lz-string": "~1.5.0",
        "next": "~14.1.4",
        "next-translate": "~2.6.2",
        "next-translate-plugin": "~2.6.2",
        "next-urql": "~5.0.2",
        "nprogress": "~0.2.0",
        "react": "~18.2.0",
        "react-dom": "~18.2.0",
        "react-dropzone": "^14.2.3",
        "react-error-boundary": "~4.0.12",
        "react-hook-form": "~7.35.0",
        "react-loading-skeleton": "~3.3.1",
        "react-merge-refs": "~2.1.1",
        "react-remove-scroll": "^2.5.10",
        "react-select": "~5.8.0",
        "react-swipeable": "~7.0.1",
        "react-tabs": "~6.0.2",
        "react-toastify": "~10.0.4",
        "redis": "~4.6.13",
        "supercluster": "^8.0.1",
        "tailwind-merge": "~2.2.1",
        "tinycolor2": "~1.6.0",
        "urql": "~4.0.6",
        "use-supercluster": "^1.2.0",
        "uuid": "~9.0.1",
        "wonka": "~6.3.4",
        "yup": "~1.4.0",
        "zustand": "~4.4.7"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "~5.0.2",
        "@graphql-codegen/fragment-matcher": "~5.0.2",
        "@graphql-codegen/introspection": "~4.0.2",
        "@graphql-codegen/near-operation-file-preset": "^3.0.0",
        "@graphql-codegen/typescript-operations": "~4.0.1",
        "@graphql-codegen/typescript-urql": "~4.0.0",
        "@mswjs/interceptors": "0.19.0",
        "@testing-library/react": "~14.2.1",
        "@trivago/prettier-plugin-sort-imports": "~4.3.0",
        "@types/crypto-js": "~4.2.2",
        "@types/google-map-react": "^2.1.10",
        "@types/node": "~20.11.16",
        "@types/nprogress": "~0.2.3",
        "@types/react": "~18.2.55",
        "@types/react-dom": "~18.2.18",
        "@types/supercluster": "^7.1.3",
        "@types/tinycolor2": "~1.4.6",
        "@types/uuid": "~9.0.8",
        "@typescript-eslint/eslint-plugin": "~6.20.0",
        "@typescript-eslint/parser": "~6.20.0",
        "@urql/introspection": "^1.0.3",
        "@vitejs/plugin-react": "~4.2.1",
        "autoprefixer": "~10.4.17",
        "concurrently": "~8.2.2",
        "eslint": "~8.56.0",
        "eslint-config-prettier": "~9.1.0",
        "eslint-plugin-no-relative-import-paths": "~1.5.3",
        "eslint-plugin-react": "~7.33.2",
        "eslint-plugin-react-hooks": "~4.6.0",
        "eslint-plugin-unused-imports": "~3.0.0",
        "graphql-markdown": "~7.0.0",
        "i18next-parser": "~9.0.2",
        "jsdom": "~24.0.0",
        "postcss": "~8.4.34",
        "prettier": "~3.2.5",
        "prettier-plugin-tailwindcss": "~0.5.11",
        "tailwindcss": "~3.4.1",
        "typescript": "~5.3.3",
        "vite-tsconfig-paths": "~4.3.1",
        "vitest": "~0.33.0"
    }
