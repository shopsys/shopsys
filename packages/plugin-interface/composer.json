{
    "name": "shopsys/plugin-interface",
    "type": "library",
    "description": "General Shopsys Framework plugin interface",
    "keywords": ["plugin", "Shopsys Framework", "SSFW"],
    "license": "MIT",
    "authors": [
        {
            "name": "Shopsys",
            "homepage": "https://www.shopsys.com/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Shopsys\\Plugin\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "symfony/monolog-bridge": "^5.4.0"
    },
    "require-dev": {
        "shopsys/coding-standards": "12.0.x-dev"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
