{% block begin %}
<?xml version="1.0" encoding="utf-8"?>
<SHOP xmlns="http://www.zbozi.cz/ns/offer/1.0">
{% endblock %}

{% block item %}
    <SHOPITEM>
        <ITEM_ID>{{ item.id }}</ITEM_ID>
        <PRODUCTNAME>{{ item.name }}</PRODUCTNAME>
        <DESCRIPTION>{{ item.description|striptags|replace({"\n": ' '})|trim }}</DESCRIPTION>
        <URL>{{ item.url }}</URL>
        <PRICE_VAT>{{ item.price.priceWithVat|moneyFormat(2, ',') }}</PRICE_VAT>
        <DELIVERY_DATE>{{ item.deliveryDate|default(-1) }}</DELIVERY_DATE>
        {% if item.imgUrl -%}
            <IMGURL>{{ item.imgUrl }}</IMGURL>
        {% endif -%}
        {% if item.ean -%}
            <EAN>{{ item.ean }}</EAN>
        {% endif -%}
        {% if item.productno is not null -%}
            <PRODUCTNO>{{ item.productno }}</PRODUCTNO>
        {% endif -%}
        {% if item.groupId is not null %}
            <ITEMGROUP_ID>{{ item.groupId }}</ITEMGROUP_ID>
        {% endif -%}
        {% if item.manufacturer is not null -%}
            <MANUFACTURER>{{ item.manufacturer }}</MANUFACTURER>
        {% endif -%}
        {% if item.categoryText is not null -%}
            <CATEGORYTEXT>{{ item.categoryText }}</CATEGORYTEXT>
        {% endif -%}
        {% for paramName, paramVal in item.params -%}
            <PARAM>
                <PARAM_NAME>{{ paramName }}</PARAM_NAME>
                <VAL>{{ paramVal }}</VAL>
            </PARAM>
        {% endfor -%}
        {% if item.maxCpc is not null -%}
            <MAX_CPC>{{ item.maxCpc }}</MAX_CPC>
        {% endif %}
        {% if item.maxCpcSearch is not null -%}
            <MAX_CPC_SEARCH>{{ item.maxCpcSearch }}</MAX_CPC_SEARCH>
        {% endif %}
    </SHOPITEM>
{% endblock %}

{% block end %}
</SHOP>
{% endblock %}
