{
    "name": "shopsys/http-smoke-testing",
    "type": "library",
    "description": "HTTP smoke test case for testing all configured routes in your Symfony project",
    "keywords": ["smoke testing","testing","Symfony","routing", "PHPUnit"],
    "license": "MIT",
    "authors": [
        {
            "name": "Shopsys",
            "homepage": "https://www.shopsys.com/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Shopsys\\HttpSmokeTesting\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\HttpSmokeTesting\\": "tests/"
        }
    },
    "require": {
        "php": "^5.6|^7.0",
        "phpunit/phpunit": "^3.7.15|^4.0|^5.0|^6.0|^7.0",
        "symfony/framework-bundle": "^2.5|^3.0|^4.0",
        "symfony/http-foundation": "^2.5|^3.0|^4.0",
        "symfony/dependency-injection": "^2.5|^3.0|^4.0",
        "symfony/routing": "^2.5|^3.0|^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4.3|^6.0|^7.0",
        "shopsys/coding-standards": "^3.0.2"
    },
    "conflict": {
        "symfony/dependency-injection": ">=3.4.15"
    }
}
