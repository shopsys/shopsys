{
    "name": "shopsys/http-smoke-testing",
    "type": "library",
    "description": "HTTP smoke test case for testing all configured routes in your Symfony project",
    "keywords": ["smoke testing", "testing", "Symfony", "routing", "PHPUnit"],
    "license": "MIT",
    "authors": [
        {
            "name": "Shopsys",
            "homepage": "https://www.shopsys.com/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Shopsys\\HttpSmokeTesting\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\HttpSmokeTesting\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "phpunit/phpunit": "^7.0",
        "symfony/framework-bundle": "^3.4|^4.0",
        "symfony/http-foundation": "^3.4|^4.0",
        "symfony/dependency-injection": "^3.4|^4.0",
        "symfony/routing": "^3.4|^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "shopsys/coding-standards": "8.0.x-dev",
        "jakub-onderka/php-parallel-lint": "^0.9"
    },
    "conflict": {
        "symfony/dependency-injection": "3.4.15|3.4.16"
    }
}
