{% extends '@ShopsysFramework/Admin/Layout/layout.html.twig' %}

{% block content %}
    <div class="web__container">
        <div class="web__panel">
            <div class="web__panel__in">
                {% block menu_panel %}
                    {{ knp_menu_render('admin_side_menu', {template: 'ShopsysFrameworkBundle:Admin/Menu:side_menu.html.twig'}) }}
                {% endblock %}
            </div>
            <div class="in-corner in-corner--menu">
                <div class="in-corner__in"></div>
            </div>
        </div>

        <div class="web__content">
            {% block breadcrumb %}
                {{ render(controller('ShopsysFrameworkBundle:Admin/Breadcrumb:index')) }}
            {% endblock %}

            <div>
                {{ render(controller('ShopsysFrameworkBundle:Admin/FlashMessage:index')) }}
            </div>

            {% if showHeading is not defined or showHeading %}
                <div class="wrap-bar">
                    <h1 class="wrap-bar__heading">
                        {% block h1 %}{{ 'Administration'|trans }}{% endblock %}
                    </h1>
                    {% block btn %}{% endblock %}
                </div>
            {% endif %}

            {% block main_content %}{% endblock %}
        </div>
    </div>
{% endblock %}
