{% extends '@ShopsysFramework/Admin/Layout/layout.html.twig' %}

{% block content %}
    <div class="web__container">
        <div class="web__panel js-web-panel">
            <div class="web__panel__in">
                {% block menu_panel %}
                    {{ knp_menu_render('admin_side_menu', {template: '@ShopsysFramework/Admin/Menu/side_menu.html.twig'}) }}
                {% endblock %}
            </div>
        </div>

        <div class="web__content">
            {% block breadcrumb %}
                {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\BreadcrumbController::indexAction')) }}
            {% endblock %}

            <div>
                {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\FlashMessageController::indexAction')) }}
            </div>

            {% if showHeading is not defined or showHeading %}
                <div class="wrap-bar">
                    <h1 class="wrap-bar__heading">
                        {% block h1 %}{{ 'Administration'|trans }}{% endblock %}
                        {% include '@ShopsysFramework/Admin/Layout/displayUuid.html.twig' %}
                    </h1>
                    {% block btn %}{% endblock %}
                </div>
                {% block visibility_info %}{% endblock %}
            {% endif %}

            {% block main_content %}{% endblock %}
        </div>
        <div class="web__content__overlay js-side-menu-overlay"></div>
    </div>
{% endblock %}
