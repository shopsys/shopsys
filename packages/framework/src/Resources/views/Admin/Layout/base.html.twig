<html lang="{{ app.request.locale }}" class="no-js">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="noindex, nofollow">

        <link rel="stylesheet" type="text/css" href="{{ asset('assets/admin/styles/index_' ~ getCssVersion() ~ '.css') }}" media="screen, projection">

        {{ encore_entry_script_tags('admin') }}

        <script type="text/javascript">
            global = {
                locale: '{{ app.request.locale }}'
            };
        </script>

        <title>{{ 'Administration'|trans }} {% block title %}Shopsys Framework{% endblock %}</title>
    </head>

    <body>
        {% block html_body %}{% endblock %}

        {{ js_validator_config() }}
        {{ init_js_validation() }}
    </body>
</html>
