<div class="in-breadcrumb">
    {% for item in knp_menu_get_breadcrumbs_array(knp_menu_get_current_item('admin_side_menu')) %}
        {% if item.item.name == 'root' %}
            <a href="{{ url('admin_default_dashboard') }}" class="in-breadcrumb__item in-breadcrumb__item--home">
                {{ icon('house-fill') }}
            </a>
        {% elseif loop.last %}
            <span class="in-breadcrumb__item in-breadcrumb__item--actual">{{ breadcrumbOverrider.lastItemOverridden ? breadcrumbOverrider.lastItemLabel : item.label }}</span>
        {% else %}
            {% if item.uri is not null %}
                <a href="{{ item.uri }}"><span class="in-breadcrumb__item">{{ item.label }}</span></a>
            {% else %}
                <span class="in-breadcrumb__item">{{ item.label }}</span>
            {% endif %}
        {% endif %}

        {% if not loop.last %}
            <span class="in-breadcrumb__separator"> > </span>
        {% endif %}
    {% endfor %}
</div>
