<div class="panel">
    <ul class="side-menu">
        {% for item in items %}
            {% if (item.visible) %}
                <li class="side-menu__item {% if item in activePath %}side-menu__item--active {% endif %}{% if item.superadmin %} side-menu__item--superadmin{% endif %}" >
                    <a href="{{ url(item.route, item.routeParameters) }}" class="side-menu__item__link">
                        {{ item.label }}
                    </a>
                    {% if item.items is not empty %}
                        <ul class="side-menu__submenu">
                            {% for subitem in item.items %}
                                {% if (subitem.visible) %}
                                    <li class="side-menu__submenu__item {% if subitem in activePath %}side-menu__submenu__item--active{% endif %}{% if subitem.superadmin or item.superadmin %} side-menu__submenu__item--superadmin{% endif %}" >
                                        <a href="{{ url(subitem.route, subitem.routeParameters) }}" class="side-menu__submenu__item__link">{{ subitem.label }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>