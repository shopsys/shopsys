{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}
    - {{ 'Promo code'|trans }}
{% endblock %}

{% block h1 %}
    {{ 'Promo code'|trans }}
{% endblock %}

{% block main_content %}
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                <a href="{{ url('admin_promocode_list') }}" class="btn-link-style">{{ 'Back to overview'|trans }}</a>
                {{ form_save(promoCode|default(null), form) }}
            {% endblock %}
        {% endembed %}
    {{ form_end(form) }}
{% endblock %}