{% for key, ruleForm in rulesForm %}
    {% set isTemplate = key is same as('__template__') %}

    <div
        class="box-advanced-search__item js-advanced-search-rule{{ isTemplate ? ' display-none' : '' }}"
        {{- isTemplate ? ' id="js-advanced-search-rule-template"' : '' -}}
    >

        <div class="box-advanced-search__item__content">
            {{ form_widget(ruleForm.subject, { attr: { class: 'js-advanced-search-rule-subject test-advanced-search-rule-subject' }, isSimple: true}) }}
        </div>

        <div class="box-advanced-search__item__content">
            {{ form_widget(ruleForm.operator, { attr: { class: 'js-advanced-search-rule-operator' }, isSimple: true}) }}
        </div>

        <div class="box-advanced-search__item__content">
            <span class="js-advanced-search-rule-value test-advanced-search-rule-value">
                {{ form_widget(ruleForm.value, { isSimple: true }) }}
            </span>
        </div>

        <div class="box-advanced-search__item__content box-advanced-search__item__content--small">
            {{ icon('x-circle-fill', {class: 'cursor-pointer js-advanced-search-remove-rule-button in-icon in-icon--remove'}) }}
        </div>

        <div class="box-advanced-search__item__content box-advanced-search__item__content--small box-advanced-search__item__content--last">
            {% if ruleForm.subject.vars.value == 'orderTotalPriceWithVat' %}
                <i class="js-tooltip svg svg-info cursor-help in-icon in-icon--info"
                    data-toggle="tooltip" data-placement="left"
                    title="{{ 'Searching in all currencies'|trans }}"
                ></i>
            {% endif %}
        </div>
    </div>
{% endfor %}
