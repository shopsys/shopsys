{% extends '@ShopsysFramework/Admin/Grid/Grid.html.twig' %}

{% block grid_value_cell_id_name %}
    <a href="{{ url('admin_transport_edit', { id: row.t.id }) }}">{{ value|nameWithFallbackOnEmpty() }}</a>
{% endblock %}

{% block grid_value_cell_id_prices %}
    {% for price in value %}
        {{ price.priceWithVat|priceWithCurrencyByDomainId(row.domainId) }}
        {% if not loop.last %} | {% endif %}
    {% endfor %}
{% endblock %}

{% block grid_no_data %}
    {{ 'No shipping created so far.'|trans }}
{% endblock %}
