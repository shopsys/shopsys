{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Warehouse settings'|trans }}{% endblock %}
{% block h1 %}{{ 'Warehouse settings'|trans }}{% endblock %}

{% block main_content %}

    {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\DomainController::domainTabsAction')) }}

    {{ form_start(form) }}
    <div class="wrap-divider">
        <div class="form-group">
            <div class="form-group__title">
                {{ 'Warehouse settings'|trans }}
            </div>
            <div>
                {{ form_row(form.delivery) }}
                {{ form_row(form.transfer) }}
            </div>
        </div>
    </div>
    {% embed '@!ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
        {% block fixed_bar_content %}
            {{ form_widget(form.save, { label: 'Save warehouse settings'|trans}) }}
        {% endblock %}
    {% endembed %}
    {{ form_end(form) }}

{% endblock %}
