{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Blog articles'|trans }}{% endblock %}
{% block h1 %}{{ 'Blog articles'|trans }}{% endblock %}

{% block btn %}
    <div class="wrap-bar">
        <a href="{{ url('admin_blogarticle_new') }}" class="btn btn--plus wrap-bar__btn">
            <i class="btn__icon">+</i>{{ 'Create new blog article'|trans }}
        </a>
    </div>
{% endblock %}

{% block main_content %}
    {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\DomainFilterController::domainFilterTabsAction', { namespace: domainFilterNamespace })) }}

    {{ form_start(quickSearchForm) }}
    <div class="wrap-divider wrap-divider--bottom">
        <div class="form-inline">
            <div class="box-quick-search">
                <div class="box-quick-search__input">
                    {{ form_widget(quickSearchForm.text, { attr:
                        {
                            placeholder: 'Search by name...'|trans
                        }
                    }) }}
                    <i class="svg cursor-help js-tooltip box-quick-search__icon in-icon in-icon--info"
                       data-toggle="tooltip" data-placement="top"
                       title="{{ 'Searching searches in name. It is possible to use wildcards * and ?.'|trans }}"
                    >{{ icon('info-circle-fill') }}</i>
                </div>
                {{ form_widget(quickSearchForm.submit, { attr: { class : 'box-quick-search__btn' }, label: 'Search [verb]'|trans, full_name: ''}) }}
            </div>
        </div>
    </div>
    {{ form_end(quickSearchForm) }}

    {{ gridView.render() }}
{% endblock %}
