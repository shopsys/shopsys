{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Store list'|trans }}{% endblock %}
{% block h1 %}{{ 'Store list'|trans }}{% endblock %}

{% block btn %}
    <div class="wrap-bar__buttons">
        <a href="{{ url('admin_store_new') }}" class="btn btn--primary btn--plus wrap-bar__btn">
            <i class="btn__icon">+</i>{{ 'Create new store'|trans }}
        </a>
    </div>
{% endblock %}

{% block main_content %}

    {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\DomainController::domainTabsAction')) }}

    <div class="js-multiple-grids-rows-unified">
        <div class="wrap-divider wrap-divider--no-border">
            {{ gridView.render() }}
        </div>
    </div>

    {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
        {% block fixed_bar_content %}
            <button class="js-drag-and-drop-grid-submit-all btn btn--disabled" type="button">{{ 'Save changes in order'|trans }}</button>
        {% endblock %}
    {% endembed %}

{% endblock %}
