{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}{{ 'Email newsletter'|trans }}{% endblock %}
{% block h1 %}{{ 'Email newsletter'|trans }}{% endblock %}

{% block main_content %}
    {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\DomainController::domainTabsAction')) }}

    {{ form_start(quickSearchForm) }}
    <div class="wrap-divider wrap-divider--bottom">
        <div class="form-inline">
            <div class="box-quick-search">
                <div class="box-quick-search__input">
                    {{ form_widget(quickSearchForm.text) }}
                </div>
                {{ form_widget(quickSearchForm.submit, { attr: { class : 'box-quick-search__btn' }, label: 'Search [verb]'|trans, full_name: ''}) }}
            </div>
        </div>
    </div>
    {{ form_end(quickSearchForm) }}


    {{ gridView.render() }}

    <div class="wrap-divider margin-top-20 text-right">
        <a href="{{ url('admin_newsletter_export') }}" class="btn btn--primary">
            {{ 'Export email list in CSV format'|trans }}
        </a>
    </div>
{% endblock %}
