{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Scripts overview'|trans }}{% endblock %}
{% block h1 %}{{ 'Scripts overview'|trans }}{% endblock %}
{% block btn %}
    <div class="wrap-bar__buttons">
        <a href="{{ url('admin_script_new') }}" class="btn btn--primary btn--plus wrap-bar__btn">
            <i class="btn__icon">+</i>
            {{ 'Create new script'|trans }}
        </a>
    </div>
{% endblock %}

{% block main_content %}
    <div class="in-message in-message--block in-message--danger">{{ 'ATTENTION - inserting scripts on the page can seriously endanger the security, performance or design of the app.'|trans }}</div>

    {{ gridView.render() }}
{% endblock %}
