{% extends '@!ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% set title = 'Extended SEO category %categoryName% - filters'|trans({'%categoryName%': category.name(locale)}) %}

{% block title %}- {{ title }}{% endblock %}
{% block h1 %}{{ title }}{% endblock %}

{% block main_content %}

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                <a href="{{ url('admin_categoryseo_newcategory') }}" class="btn-link-style">{{ 'Back to category selection'|trans }}</a>
                {{ form_widget(form.save, { attr: { class: 'margin-top-20 margin-bottom-20' } })  }}
            {% endblock %}
        {% endembed %}

    {{ form_end(form) }}

{% endblock %}
