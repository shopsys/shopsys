{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Customers overview'|trans }}{% endblock %}
{% block h1 %}{{ 'Customers overview'|trans }}{% endblock %}

{% block btn %}
    <div class="wrap-bar__buttons">
        <a href="{{ url('admin_customer_new') }}" class="btn btn--primary btn--plus wrap-bar__btn">
            <i class="btn__icon">+</i>
            {{ 'Create new customer'|trans }}
        </a>
    </div>
{% endblock %}

{% block main_content %}
    {{ render(controller('Shopsys\\FrameworkBundle\\Controller\\Admin\\DomainController::domainTabsAction')) }}

    <div class="in-tab">
        <div class="in-tab__heading">
            <a href="#" class="in-tab__heading__item js-tabs-button active" data-tab-id="quick">
                {{ 'Quick search'|trans }}
            </a>
        </div>
        <div class="in-tab__content">
            <div class="in-tab__content__in active" data-tab-id="quick">

                {{ form_start(quickSearchForm) }}
                    <div class="box-quick-search">
                        <div class="box-quick-search__input">
                            {{ form_widget(quickSearchForm.text) }}
                            {{ iconInfo('Searching searches in last name, company name, email, telephone. It is possible to use wildcards * and ?.'|trans) }}
                        </div>
                        {{ form_widget(quickSearchForm.submit, { attr: { class : 'box-quick-search__btn' }, label: 'Search [verb]'|trans, full_name: ''}) }}
                    </div>
                {{ form_end(quickSearchForm) }}
            </div>
        </div>
    </div>

    <div class="administrator_customer_list">
        {{ gridView.render() }}
    </div>
{% endblock %}
