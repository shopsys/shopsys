{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Create variant'|trans }}{% endblock %}
{% block h1 %}{{ 'Create variant'|trans }}{% endblock %}

{% block main_content %}
    {{ form_start(form) }}
        <div class="wrap-divider">
            {{ form_row(form.mainVariant, { label: 'Main variant'|trans }) }}
        </div>
        <div class="wrap-divider">
            {{ form_row(form.variants, { label: 'Variants'|trans }) }}
        </div>
        <div class="wrap-divider text-right">
            {{ form_row(form.save, { label: 'Create'|trans, attr: { 'class': 'btn--primary' }}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
