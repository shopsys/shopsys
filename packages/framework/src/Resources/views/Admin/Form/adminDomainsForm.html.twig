<div class="js-toggle-menu-submenu box-dropdown__options js-domains-select">
    {{ form_start(form, {'action': path('admin_domains_filter'), 'method': 'POST'}) }}
    <ul class="multi-column-list">
        {% for child in form.domains %}
            <li class="box-dropdown__options__item">
                <div class="form-choice form-choice--inline-checkbox">
                    {{ form_widget(child, { inFormChoice: true }) }}
                    {{ form_label(child) }}
                    {{ form_errors(child) }}
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="select-domain-buttons">
        <button class="btn btn--light btn--small js-domains-select-all" type="button">{{ 'Select all'|trans }}</button>
        <button class="btn btn--light btn--small js-domains-select-none"
                type="button">{{ 'Select none'|trans }}</button>
        {{ form_widget(form.apply) }}
    </div>
    {{ form_end(form) }}
</div>
