{% block display_only_row %}
    {% if form.vars.widget_form_type is null %}
        <div class="form-line">
            <div class="form-line__label">
                {{ form.vars.label }}:
            </div>
            <div class="form-line__side">
                <div class="form-line__item form-line__item--text">
                    {{ form.vars.data }}
                </div>
            </div>
        </div>
    {% else %}
        {{ form_widget(form) }}
    {% endif %}
{% endblock %}